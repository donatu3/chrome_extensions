{
    "name": "weather",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "３日分の天気予報を表示する",
    
    "icons": {
        "48": "./icon/icon48.png"
    },
    
    "permissions": [
        "storage"
    ],
    
    "options_page": "options.html",
    
    "browser_action": {
        "default_icon": "./icon/icon16.png",
        "default_title": "weather",
        "default_popup": "popup.html"
    }
    
}